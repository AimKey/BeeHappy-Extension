{
  "manifest_version": 3,
  "name": "BeeHappy Emote",
  "version": "1.0",
  "description": "YouTube emote replacement for BeeHappy",
  "permissions": ["activeTab", "storage", "scripting", "webRequest"],
  "host_permissions": [
    "https://beehappy-gfghhffadqbra6g8.eastasia-01.azurewebsites.net/*",
    "https://www.youtube.com/*",
    "*://*.youtube.com/*",
    "https://localhost:7256/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["constants.js", "emote-map.js", "emote-picker.js", "overlay-chat.js", "content-script.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["constants.js", "overlay-chat.html", "styles.css", "images/*"],
      "matches": ["*://*.youtube.com/*", "https://www.youtube.com/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'",
    "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'unsafe-inline' 'unsafe-eval'; child-src 'self'"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "BeeHappy Emotes"
  },
  "icons": {
    "16": "./assets/icons/BeeHappyLogo.png",
    "32": "./assets/icons/BeeHappyLogo.png",
    "48": "./assets/icons/BeeHappyLogo.png",
    "128": "./assets/icons/BeeHappyLogo.png"
  }
}
